<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/launch"
    android:background="#ffffff"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/launchBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/launchImage"
        android:layout_marginTop="@dimen/app_name_txt_margintop" >

        <TextView
            android:id="@+id/bottomText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="#cc000000"
            android:textSize="@dimen/app_name_textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottomText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottomText1"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dip"
            android:textColor="#2e2e2e"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/launchImage"
        android:layout_width="@dimen/launch_image_width"
        android:layout_height="@dimen/launch_image_hight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/launch_image_margintop"
        android:background="@drawable/logo1028"
        android:scaleType="fitXY" />

</RelativeLayout>